1812version: '3.8'

services:
  gsctracker:
    build: . # Alternative if published to Docker Hub
  # image: neuman1812/gsctracker:latest
    container_name: gsctrackerdev
    restart: unless-stopped
    ports:
      - "8282:3000" # (HOST:CONTAINER) Change the host port (left side) to expose on a different port
    environment:
      - PUID=1000
      - PGID=1000
      - UMASK=022
      - TZ=UTC # Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
      - DATA_DIR=/data
    volumes:
      - ./data:/data  # Includes database and logs subdirectory
      - ./public:/app/public
      - ./server.js:/app/server.js
      - ./logger.js:/app/logger.js

    # Optional Variables:

    # Health check
    # healthcheck:
    #   test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/health"]
    #   interval: 30s
    #   timeout: 10s
    #   retries: 3
    #   start_period: 10s
    
    # Optional: Logging configuration
