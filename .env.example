# Local Development Environment Configuration Template
# Copy this file to .env and fill in with your own values
# ⚠️ .env is ignored by git - never commit secrets to the repository

# Node environment
NODE_ENV=development
PORT=3000
DATA_DIR=/data

# Session security (generate a random string for production)
SESSION_SECRET=change-this-to-a-random-secret-in-production

# CORS configuration
CORS_ORIGIN=http://localhost:3000

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=apex_scout_manager
POSTGRES_USER=asm_user
POSTGRES_PASSWORD=change_in_production
POSTGRES_SSL=false
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# Redis Configuration (for session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Google OAuth 2.0 Configuration
# Get credentials from: https://console.cloud.google.com/
# Authorized redirect URIs should include: http://localhost:3000/api/auth/google/callback
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Docker/System settings (optional - defaults work for most setups)
PUID=1000
PGID=1000
UMASK=022
TZ=America/New_York
